// Clear the 2nd bit(Position 1) of a number n:-

public class ClearBit 
{
    public static void main(String args[])
    {
        int n=5; //0101
        int pos=2; 
        int bitMask=1<<pos; 

        int notbitMask= ~(bitMask); 
        int newNumber=notbitMask & n; 
        System.out.println(newNumber); 

    }
}
